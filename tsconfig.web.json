{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/*"]
    }
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.tsx"
  ],
  "exclude": [
    "client/app/layout.tsx",
    "client/app/page.tsx",
    "client/next.config.ts"
  ]
}
